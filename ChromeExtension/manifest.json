{
    "name": "&PickClipper",
    "version": "1.0",
    "description": "Now you can clip news & edit post in &PICK",
    "manifest_version": 2,

    "icons": {
      "16" : "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },

    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },

    "background": {
      "scripts": ["eventPage.js"],
      "persistent": false
    },    

    "permissions": [
      "activeTab",
      "storage",
      "notifications",
      "contextMenus"           
    ]
  }
  