{
    "name": "&PickClipper",
    "version": "1.0",
    "description": "구글 크롬을 이용하여 뉴스 스크랩! 그리고 &PICK에서 편집하기",
    "manifest_version": 2,

    "icons": {
      "16" : "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },

    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },

    "background": {
      "scripts": ["eventPage.js"],
      "persistent": false
    },    

    "permissions": [
      "activeTab",
      "storage",
      "notifications",
      "contextMenus"           
    ]
  }
  